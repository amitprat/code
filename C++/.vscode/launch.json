{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/C++/Main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/C++/Main.exe",
            "args": ["/std:c++20"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}/C++",
            "environment": [],
            "console": "internalConsole"
        },
        {
            "name": "C/C++: cl.exe build and debug active file",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/C++/Main.exe",
            "args": ["/std:c++20"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}/C++",
            "environment": [],
            "console": "internalConsole",
            "preLaunchTask": "C/C++: cl.exe build active file"
        }
    ]
}